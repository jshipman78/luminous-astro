---
import siteConfig from '../../data/siteConfig.json';

const { business } = siteConfig;

const navigation = [
  { name: 'Services', href: '#services', hasDropdown: true },
  { name: 'Portfolio', href: '/portfolio' },
  { name: 'About', href: '/about' },
  { name: 'Service Areas', href: '/service-areas' },
  { name: 'Contact', href: '/contact' },
];

const serviceDropdown = [
  { name: 'Real Estate Photography', href: '/real-estate-photography' },
  { name: 'Portrait Photography', href: '/portrait-photography' },
  { name: 'Digital Services', href: '/digital-services' },
];
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-border transition-all duration-300" id="site-header">
  <div class="container">
    <!-- Top bar: Contact info (desktop only) -->
    <div class="hidden lg:flex items-center justify-between py-2 text-sm border-b border-border/50">
      <div class="flex items-center gap-6 text-muted">
        <a
          href={`tel:${business.phoneRaw}`}
          class="flex items-center gap-2 hover:text-accent transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          {business.phone}
        </a>
        <span class="text-border">|</span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          {business.address.city}, {business.address.state}
        </span>
        <span class="text-border">|</span>
        <span class="text-accent font-medium">Since 2001</span>
      </div>

      <!-- Social links -->
      <div class="flex items-center gap-4">
        <a
          href={business.social.facebook}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-accent transition-colors"
          aria-label="Facebook"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
        <a
          href={business.social.instagram}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-accent transition-colors"
          aria-label="Instagram"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/>
          </svg>
        </a>
        <a
          href={business.social.youtube}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-accent transition-colors"
          aria-label="YouTube"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Main nav -->
    <nav class="flex items-center justify-between py-4" aria-label="Main navigation">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <span class="font-display text-2xl font-bold text-primary group-hover:text-accent transition-colors">
          Luminous
        </span>
        <span class="hidden sm:inline-block text-xs text-muted font-medium uppercase tracking-wider">
          Since 2001
        </span>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden lg:flex items-center gap-8">
        {navigation.map((item) => (
          <li class="relative group">
            {item.hasDropdown ? (
              <>
                <button
                  class="flex items-center gap-1 font-medium text-text hover:text-accent transition-colors py-2"
                  aria-expanded="false"
                  aria-haspopup="true"
                >
                  {item.name}
                  <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </button>
                <!-- Dropdown -->
                <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                  <div class="bg-white rounded-xl shadow-xl border border-border py-2 min-w-[220px]">
                    {serviceDropdown.map((service) => (
                      <a
                        href={service.href}
                        class="block px-4 py-2 text-text hover:bg-light-bg hover:text-accent transition-colors"
                      >
                        {service.name}
                      </a>
                    ))}
                  </div>
                </div>
              </>
            ) : (
              <a
                href={item.href}
                class="font-medium text-text hover:text-accent transition-colors py-2"
              >
                {item.name}
              </a>
            )}
          </li>
        ))}
      </ul>

      <!-- CTA Button -->
      <div class="hidden lg:flex items-center gap-4">
        <a
          href={business.bookingPortal}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary"
        >
          Book Now
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        class="lg:hidden p-2 rounded-lg hover:bg-light-bg transition-colors"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="lg:hidden hidden border-t border-border bg-white"
    aria-labelledby="mobile-menu-button"
  >
    <div class="container py-4">
      <ul class="space-y-2">
        {navigation.map((item) => (
          <li>
            <a
              href={item.hasDropdown ? '/real-estate-photography' : item.href}
              class="block py-3 px-4 font-medium text-text hover:text-accent hover:bg-light-bg rounded-lg transition-colors"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>

      <div class="mt-6 pt-6 border-t border-border">
        <a
          href={business.bookingPortal}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary w-full justify-center"
        >
          Book Now
        </a>

        <a
          href={`tel:${business.phoneRaw}`}
          class="flex items-center justify-center gap-2 mt-4 py-3 text-primary font-medium"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          {business.phone}
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
      menuButton.setAttribute('aria-expanded', (!isExpanded).toString());
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Header scroll behavior
  const header = document.getElementById('site-header');
  let lastScroll = 0;

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 100) {
      header?.classList.add('shadow-md');
    } else {
      header?.classList.remove('shadow-md');
    }

    lastScroll = currentScroll;
  });
</script>
