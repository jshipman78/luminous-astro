---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CTASection from '../../components/sections/CTASection.astro';
import siteConfig from '../../data/siteConfig.json';

const { business, serviceAreas } = siteConfig;

// Sort areas with home base first
const sortedAreas = [...serviceAreas].sort((a, b) => {
  if (a.isHomeBase) return -1;
  if (b.isHomeBase) return 1;
  return a.city.localeCompare(b.city);
});
---

<BaseLayout
  title="Service Areas | Northeast Texas Photography"
  description="Luminous Productions serves Commerce, Greenville, Rockwall, Sulphur Springs, Paris, Cooper, Quinlan, and all of Northeast Texas with professional photography services."
>
  <!-- Hero Section -->
  <section class="relative py-24 md:py-32 bg-primary overflow-hidden">
    <div class="container relative z-10">
      <div class="max-w-3xl">
        <p class="text-accent font-semibold uppercase tracking-wide text-sm mb-4">
          Where We Work
        </p>
        <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          Serving Northeast Texas
        </h1>
        <p class="text-xl text-white/90 leading-relaxed">
          Based in Commerce, TX, we provide professional photography and digital services throughout the region. Our coverage extends approximately 50 miles from Commerce, serving Hunt, Hopkins, Rockwall, Collin, Delta, and surrounding counties.
        </p>
      </div>
    </div>
  </section>

  <!-- Service Areas Grid -->
  <section class="section">
    <div class="container">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedAreas.map((area) => (
          <a
            href={`/service-areas/${area.slug}`}
            class:list={[
              "group relative block bg-white rounded-2xl p-8 transition-all hover:-translate-y-2 hover:shadow-xl border",
              area.isHomeBase ? "border-accent/30 shadow-lg" : "border-border shadow-sm"
            ]}
          >
            {area.isHomeBase && (
              <div class="absolute -top-3 -right-3 bg-accent text-white text-xs font-semibold px-3 py-1 rounded-full">
                Home Base
              </div>
            )}

            <div class="flex items-start gap-4">
              <div class:list={[
                "w-14 h-14 rounded-xl flex items-center justify-center flex-shrink-0 transition-colors",
                area.isHomeBase
                  ? "bg-accent text-white"
                  : "bg-accent/10 text-accent group-hover:bg-accent group-hover:text-white"
              ]}>
                <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
              </div>

              <div class="flex-1">
                <h2 class="font-display text-xl font-bold text-primary group-hover:text-accent transition-colors mb-1">
                  {area.city}, {area.state}
                </h2>
                <p class="text-muted text-sm mb-4">
                  Professional photography services
                </p>

                <span class="inline-flex items-center gap-2 text-accent font-semibold text-sm group-hover:gap-3 transition-all">
                  View services
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Coverage Info -->
  <section class="section bg-light-bg">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <p class="text-accent font-semibold uppercase tracking-wide text-sm mb-3">
            Our Coverage
          </p>
          <h2 class="font-display text-3xl md:text-4xl font-bold text-primary mb-6">
            50-Mile Service Radius
          </h2>
          <p class="text-muted text-lg leading-relaxed mb-6">
            From our Commerce headquarters, we serve clients throughout Northeast Texas. Our standard service area includes approximately 50 miles from Commerce, covering multiple counties and communities.
          </p>
          <p class="text-muted mb-8">
            Don't see your area listed? We regularly travel for larger projects. Contact us for a custom quoteâ€”travel fees may apply for locations outside our standard coverage area.
          </p>

          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-body">No travel fees for most service areas</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-body">Same-day appointments often available</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-body">Extended coverage available for larger projects</span>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="font-display text-xl font-bold text-primary mb-6">Counties We Serve</h3>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <h4 class="font-semibold text-primary mb-2">Primary</h4>
              <ul class="space-y-2 text-muted">
                <li>Hunt County</li>
                <li>Hopkins County</li>
                <li>Rockwall County</li>
                <li>Collin County (East)</li>
              </ul>
            </div>
            <div>
              <h4 class="font-semibold text-primary mb-2">Extended</h4>
              <ul class="space-y-2 text-muted">
                <li>Delta County</li>
                <li>Fannin County</li>
                <li>Lamar County</li>
                <li>Rains County</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection
    headline="Ready to book in your area?"
    description="Contact us to schedule your photography session. We'll confirm availability and any travel arrangements needed for your location."
    variant="dark"
  />
</BaseLayout>
